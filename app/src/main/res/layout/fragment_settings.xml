<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darker_aqua"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_text"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/vibrationLinearLayout">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/turnOffVibration"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp">

        </com.google.android.material.switchmaterial.SwitchMaterial>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/turnOffVibration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Turn off Vibration"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:id="@+id/textTurnOffVibration"
            android:layout_marginTop="2dp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vibrationLinearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_text"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/musicLinearLayout">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/turnOffVibration"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/turnOffMusic"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp">

        </com.google.android.material.switchmaterial.SwitchMaterial>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textTurnOffVibration"
            app:layout_constraintLeft_toRightOf="@+id/turnOffMusic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Turn off Music"
            android:textColor="@color/black"
            android:id="@+id/textTurnOffMusic"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/musicLinearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_text"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/turnOffMusic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/turnOffSoundEffects"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp">

        </com.google.android.material.switchmaterial.SwitchMaterial>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textTurnOffMusic"
            app:layout_constraintLeft_toRightOf="@+id/turnOffSoundEffects"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            android:text="Turn off Sound Effects"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp">

        </TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
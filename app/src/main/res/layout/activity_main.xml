<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arcade Blast"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="40dp"
        android:fontFamily="@font/pangolin_regular"
        android:textColor="@color/dark_gray">
    </TextView>

    <TextView
        android:id="@+id/homeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.440"
        android:textSize="17dp"
        android:fontFamily="@font/pangolin_regular"
        android:textColor="@color/dark_gray">

    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeText"
        android:id="@+id/registerButton"
        android:fontFamily="@font/pangolin_regular"
        android:textAllCaps="false"
        android:background="@drawable/custom_buttons"
        android:layout_marginTop="5dp"
        android:onClick="registerScreen">

    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerButton"
        android:fontFamily="@font/pangolin_regular"
        android:textAllCaps="false"
        android:id="@+id/loginButton"
        android:background="@drawable/custom_buttons"
        android:layout_marginTop="5dp"
        android:onClick="loginScreen">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>
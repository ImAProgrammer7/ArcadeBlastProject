<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:id="@+id/profileFragment"
    android:backgroundTint="@color/aqua"
    android:backgroundTintMode="add"
    android:background="@color/aqua">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/profilePicture"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:civ_border_width="4dp"
        app:civ_border_color="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstNameField"
        android:text="First Name: (Placeholder)"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_text"
        android:textColor="@color/dark_gray"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastNameField"
        android:text="Last Name: (Placeholder)"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/firstNameField"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_text"
        android:textColor="@color/dark_gray"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameField"
        android:layout_marginTop="30dp"
        android:text="Username: (Placeholder)"
        app:layout_constraintTop_toBottomOf="@id/lastNameField"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_text"
        android:textColor="@color/dark_gray"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snakeHighScoreField"
        android:layout_marginTop="30dp"
        android:text="Snake Highest Score: (Placeholder)"
        app:layout_constraintTop_toBottomOf="@id/usernameField"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_text"
        android:textColor="@color/dark_gray"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/survivalHighScoreField"
        android:layout_marginTop="30dp"
        android:text="Survival Highest Score: (Placeholder)"
        app:layout_constraintTop_toBottomOf="@id/snakeHighScoreField"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_text"
        android:textColor="@color/dark_gray"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>